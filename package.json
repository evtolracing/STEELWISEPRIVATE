{
  "name": "steelwise-platform",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "SteelWise Steel Manufacturing & Distribution Platform",
  "scripts": {
    "dev": "npm --prefix src/backend run dev",
    "dev:frontend": "npm --prefix src/frontend run dev",
    "vercel-install": "cd src/backend && npm install --legacy-peer-deps && cd ../frontend && npm install --include=dev --legacy-peer-deps",
    "vercel-build": "node scripts/build.cjs",
    "build": "node scripts/build.cjs",
    "start": "npm --prefix src/backend run start",
    "prisma:generate": "npm --prefix src/backend run db:generate",
    "prisma:migrate": "npm --prefix src/backend run db:migrate"
  },
  "keywords": ["steel", "erp", "manufacturing"],
  "author": "SteelWise",
  "license": "UNLICENSED",
  "engines": {
    "node": "20.x"
  }
}
